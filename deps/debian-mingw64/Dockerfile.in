from debian

# update system
run apt-get -y update
run apt-get -y upgrade

# get the dependencies
run apt-get -y install automake autoconf git
copy autodep.sh .
run ./autodep.sh debian-mingw64

# now, we need to get the qemu repo for the boost dependency.
# see: https://qemu.weilnetz.de/debian/
run apt-get -y install wget gnupg
run wget -O - https://qemu.weilnetz.de/debian/gpg.key | apt-key add -
run echo "deb https://qemu.weilnetz.de/debian/ testing contrib" > /etc/apt/sources.list.d/cygwin.list
run apt-get -y update
run apt-get -y install mingw64-x86-64-boost

# build the package
run git clone @URL_GITREPO@
workdir @PACKAGE@
run autoreconf -i

env LIBS=-lwsock32
run ./configure --host=x86_64-w64-mingw32 --with-boost=/usr/x86_64-w64-mingw32/sys-root/mingw
run make
